{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=pos;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "pos-app",
    "Audience": "pos-app",
    "SigningKey": "",
    "AccessTokenTTLMinutes": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
